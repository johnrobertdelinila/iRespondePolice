<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".PoliceReportActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbarlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            app:navigationIcon="@drawable/iresponde_back_arrow"
            style="@style/Widget.iResponde.Toolbar"
            android:id="@+id/toolbar"
            app:title="Police Report"
            android:paddingStart="12dp"
            android:paddingLeft="12dp"
            android:paddingEnd="12dp"
            android:paddingRight="12dp"
            app:contentInsetStart="0dp"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize" />

    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context=".PoliceReportActivity">

        <LinearLayout
            android:orientation="vertical"
            android:paddingStart="12dp"
            android:paddingLeft="12dp"
            android:paddingEnd="12dp"
            android:paddingRight="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.design.widget.TextInputLayout
                style="@style/AppTheme.TextInputLayout"
                app:errorTextAppearance="@style/errorAppearance"
                android:id="@+id/textInput_case_no"
                app:passwordToggleEnabled="true"
                app:errorEnabled="true"
                android:layout_marginTop="16dp"
                android:paddingBottom="8dp"
                android:hint="Case No."
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/edit_case_no"
                    android:inputType="text"
                    android:maxLines="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                style="@style/AppTheme.TextInputLayout"
                app:errorTextAppearance="@style/errorAppearance"
                android:id="@+id/textInput_incident"
                app:passwordToggleEnabled="true"
                app:errorEnabled="true"
                android:paddingBottom="8dp"
                android:hint="Incident"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/edit_incident"
                    android:inputType="text"
                    android:maxLines="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                style="@style/AppTheme.TextInputLayout"
                app:errorTextAppearance="@style/errorAppearance"
                android:id="@+id/textInput_detail"
                app:passwordToggleEnabled="true"
                app:errorEnabled="true"
                android:paddingBottom="8dp"
                android:hint="Detail of Event"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/edit_detail"
                    android:inputType="textMultiLine"
                    android:lines="4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                style="@style/AppTheme.TextInputLayout"
                app:errorTextAppearance="@style/errorAppearance"
                android:id="@+id/textInput_actions"
                app:passwordToggleEnabled="true"
                app:errorEnabled="true"
                android:paddingBottom="8dp"
                android:hint="Actions Taken"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/edit_actions"
                    android:inputType="textMultiLine"
                    android:lines="4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                style="@style/AppTheme.TextInputLayout"
                app:errorTextAppearance="@style/errorAppearance"
                android:id="@+id/textInput_witness"
                app:passwordToggleEnabled="true"
                app:errorEnabled="true"
                android:paddingBottom="8dp"
                android:hint="Witness"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/edit_witness"
                    android:inputType="textMultiLine"
                    android:lines="3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </android.support.design.widget.TextInputLayout>

            <Button
                style="@style/ButtonPrimary"
                android:id="@+id/btn_submit"
                android:text="SUBMIT"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </ScrollView>

</android.support.design.widget.CoordinatorLayout>
