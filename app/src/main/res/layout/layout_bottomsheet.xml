<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottomSheet"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:paddingRight="16dp"
    android:paddingLeft="16dp"
    android:background="#FFFFFF"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior"
    app:behavior_hideable="true"
    app:behavior_peekHeight="?android:attr/actionBarSize"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:textSize="16sp"
        android:text="Report Details"
        android:textColor="#000000"
        android:gravity="center_vertical"
        android:layout_height="56dp" />
    
    <LinearLayout
        android:id="@+id/keepLayout"
        android:focusable="true"
        android:clickable="true"
        android:background="?attr/selectableItemBackground"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="48dp">

        <ImageView
            android:src="@drawable/play_music"
            android:layout_width="24dp"
            android:layout_height="24dp" />
        
        <TextView
            android:textSize="16sp"
            android:text="Keep"
            android:layout_marginLeft="32sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/keepLayout2"
        android:focusable="true"
        android:clickable="true"
        android:background="?attr/selectableItemBackground"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="48dp">

        <ImageView
            android:src="@drawable/play_music"
            android:layout_width="24dp"
            android:layout_height="24dp" />

        <TextView
            android:textSize="16sp"
            android:text="Keep"
            android:layout_marginLeft="32sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/keepLayout3"
        android:focusable="true"
        android:clickable="true"
        android:background="?attr/selectableItemBackground"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="48dp">

        <ImageView
            android:src="@drawable/play_music"
            android:layout_width="24dp"
            android:layout_height="24dp" />

        <Button
            android:text="Respond"
            android:id="@+id/btn_respond"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/keepLayout4"
        android:focusable="true"
        android:clickable="true"
        android:background="?attr/selectableItemBackground"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="48dp">

        <ImageView
            android:src="@drawable/play_music"
            android:layout_width="24dp"
            android:layout_height="24dp" />

        <Button
            android:text="Fake Report"
            android:id="@+id/btn_fake_report"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/keepLayout5"
        android:focusable="true"
        android:clickable="true"
        android:background="?attr/selectableItemBackground"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="48dp">

        <ImageView
            android:src="@drawable/play_music"
            android:layout_width="24dp"
            android:layout_height="24dp" />

        <Button
            android:text="Write Report"
            android:id="@+id/btn_send_report"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>